{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2017",
    "outDir": "./generators/app",
    "rootDir": "src",
    "esModuleInterop": true,
    "typeRoots": [ "src/types", "./node_modules/@types"]

  },
  "exclude": [
    "dist",
    "generators/app/templates",
    "node_modules",
    "**/*.spec.ts"
  ]
}
